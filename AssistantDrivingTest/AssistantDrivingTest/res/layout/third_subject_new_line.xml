<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <!-- title -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3b84ba" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_back_selector" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/third_subject_setting_new_line_title"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/save"
                android:src="@color/white" />
        </RelativeLayout>

        <!-- gps -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/gps"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:text="@string/gps_searching"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/map" />
        </RelativeLayout>

        <!-- speed limit -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/speed_limit"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/speed_limit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="3"
                android:text="@string/speed_hint"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/speed_limit"
                android:text="km/h"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/speed_station_limit"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/speed_station_limit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:maxLength="3"
                android:text="@string/speed_hint"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/speed_station_limit"
                android:text="km/h"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <!-- distance -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/item_distance"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- bus_station -->

            <RelativeLayout
                android:id="@+id/bus_distance_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/distance"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/bus_station"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bus_distance"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- change line -->

            <RelativeLayout
                android:id="@+id/change_line_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/distance"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/change_line"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/change_line"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- pull over -->

            <RelativeLayout
                android:id="@+id/pull_over_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bus_distance_layout"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/pull_over"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/pull_over"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- intersection -->

            <RelativeLayout
                android:id="@+id/intersection_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bus_distance_layout"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/intersection"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/intersection"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- driving straight -->

            <RelativeLayout
                android:id="@+id/driving_straight_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pull_over_layout"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/driving_straight"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/driving_straight"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- gear operation -->

            <RelativeLayout
                android:id="@+id/gear_operation_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/pull_over_layout"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/gear_operation"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/gear_operation"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- overtake -->

            <RelativeLayout
                android:id="@+id/overtake_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/driving_straight_layout"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/overtake"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/takeover"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>

            <!-- u_turn -->

            <RelativeLayout
                android:id="@+id/u_turn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/driving_straight_layout"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/u_turn"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/u_turn"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="@string/distance_hint"
                    android:textColor="@color/blue"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>

        <com.assistant.drivingtest.widget.ExpansionGridView
            android:id="@+id/item_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" >
        </com.assistant.drivingtest.widget.ExpansionGridView>
    </LinearLayout>

</ScrollView>